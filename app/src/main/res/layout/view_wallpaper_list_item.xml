<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?selectableItemBackground"
                                    app:cardUseCompatPadding="true"
                                    app:contentPadding="2dp">

    <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/bing_wallpaper_list_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="bing_wallpaper_detail_image" />

    <TextView
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:id="@+id/bing_wallpaper_list_item_image_date"
            android:textColor="@android:color/white"
            android:background="@color/color_3000"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <ProgressBar
            android:id="@+id/bing_wallpaper_list_item_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

</android.support.v7.widget.CardView>
